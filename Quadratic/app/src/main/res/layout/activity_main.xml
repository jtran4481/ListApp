<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/y1Input"
        android:layout_width="113dp"
        android:layout_height="42dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="85dp"
        android:ems="10"
        android:hint="y1"
        android:inputType="textNoSuggestions"
        app:layout_constraintStart_toEndOf="@+id/x1Input"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/x2Input"
        android:layout_width="113dp"
        android:layout_height="42dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="x2"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/x1Input" />

    <EditText
        android:id="@+id/y2Input"
        android:layout_width="113dp"
        android:layout_height="42dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="y2"
        android:inputType="textNoSuggestions"
        app:layout_constraintStart_toEndOf="@+id/x2Input"
        app:layout_constraintTop_toBottomOf="@+id/y1Input" />

    <EditText
        android:id="@+id/x3Input"
        android:layout_width="113dp"
        android:layout_height="42dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="x3"
        android:inputType="textNoSuggestions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/x2Input" />

    <EditText
        android:id="@+id/y3Input"
        android:layout_width="113dp"
        android:layout_height="42dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="y3"
        android:inputType="textNoSuggestions"
        app:layout_constraintStart_toEndOf="@+id/x3Input"
        app:layout_constraintTop_toBottomOf="@+id/y2Input" />

    <EditText
        android:id="@+id/x1Input"
        android:layout_width="113dp"
        android:layout_height="42dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="85dp"
        android:ems="10"
        android:hint="x1"
        android:inputType="textNoSuggestions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="132dp"
        android:text="Calculate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/x3Input" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="247dp"
        android:layout_height="104dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="112dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calBtn" />

</android.support.constraint.ConstraintLayout>